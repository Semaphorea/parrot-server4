{% extends 'base.html.twig' %}

{% block title %}Vehicule{% endblock %}

{% block body %}
<div class="maincontainer {{page}}">
    <h1>Vehicule</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ vehicule.id }}</td>
            </tr>
            <tr>
                <th>Brandt</th>
                <td>{{ vehicule.brandt }}</td>
            </tr>
            <tr>
                <th>Model</th>
                <td>{{ vehicule.model }}</td>
            </tr>
            <tr>
                <th>Features</th>
                <td>{{ vehicule.features ? vehicule.features|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ vehicule.year ? vehicule.year|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Kilometers</th>
                <td>{{ vehicule.kilometers }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ vehicule.type }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ vehicule.price }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_vehicule') }}">back to list</a> 

    <a href="{{ path('app_crud_vehicule_edit', {'id': vehicule.id}) }}">edit</a>

    {{ include('Crud/crud_vehicule/_delete_form.html.twig') }}
    </div>
{% endblock %}

{% block title %}Visitor{% endblock %}

{% block body %}
<div class="maincontainer {{page}}">
    <h1>Visitor</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ visitor.id }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ visitor.lastname }}</td>
            </tr>
            <tr>





{% block body %}

<div class="maincontainer {{page}}">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Day</th>
                <th>Date</th>
                <th>Timetable</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for timetable in timetables %}
            <tr>
                <td>{{ timetable.id }}</td>
                <td>{{ timetable.day }}</td>
                <td>{{ timetable.date ? timetable.date|date('Y-m-d') : '' }}</td>
                <td>{{ timetable.timetable ? timetable.timetable|join(', ') : '' }}</td>
                <td>
                    <a href="{{ path('app_admin_horaires', {'id': timetable.id}) }}">show</a> 
                    <a href="{{ path('app_timetable_crud_edit', {'id': timetable.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_timetable_crud_new') }}">Create new</a>
    </div>
{% endblock %}
